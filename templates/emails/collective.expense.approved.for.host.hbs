Subject: New expense approved on {{collective.name}}: {{{currency expense.amount currency=expense.currency}}} for {{expense.title}}

{{> header}}

<style>
.btn {
  color: #fff;
  background: #80d823;
  border: 1px solid transparent;
  border-radius: 28px;
  display: inline-block;
  padding: .75rem 1rem;
  text-transform: uppercase;
  text-align: center;
  font-weight: 700;
  min-width: 150px;
  box-sizing: border-box;
  vertical-align: middle;
}

.btn.red {
  background: #dd2663;
}
</style>

<center>
  <h1>{{{currency expense.amount currency=expense.currency}}}</h1>
  <div>{{expense.title}}</div>
  <div>Submitted by: {{user.name}}</div>
  <div>Paypal Email: {{user.paypalEmail}}</div>
  <p><font color="#999">{{expense.notes}}</font></p>

  <a href="{{actions.view}}" style="color:#7fadf2">
    <img src="https://res.cloudinary.com/opencollective/image/fetch/w_640,f_jpg/{{expense.attachment}}" width="100%" />
  </a>

  <br /><br />
  <a href="{{actions.viewExpenseUrl}}"><div class="btn">View</div></a>

</center>

{{> footer}}
