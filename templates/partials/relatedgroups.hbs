<style>
.CollectiveCards {
  overflow: hidden;
  margin: 20px 0px;
}  
.CollectiveCard {
  vertical-align: top;
  position: relative;
  box-sizing: border-box;
  display: inline-block;
  width: 185px;
  height: 265px;
  border-radius: 5px;
  background-color: #ffffff;
  box-shadow: 0 1px 3px 0 rgba(45, 77, 97, 0.2);
  margin: 5px;
  float: left;
  overflow: hidden;
  text-decoration: none !important;
}
.CollectiveCard-head {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100px;
  border-bottom: 3px solid #46b0ed;
}
.CollectiveCard-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}
.CollectiveCard-image {
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 65%;
  height: 55%;
  margin: auto;
}
.CollectiveCard-name, .CollectiveCard-description {
  overflow: hidden;
  text-overflow: ellipsis;
}
.CollectiveCard-name {
  font-size: 16px;
  font-weight: 300;
  text-align: center;
  color: #303233;
  margin: 10px 5px;
  white-space: nowrap;
}
.CollectiveCard-description {
  height: 50px;
  font-size: 12px;
  font-weight: normal;
  line-height: 1.44;
  text-align: center;
  color: #787d80;
  margin: 0 5px;
}
.CollectiveCard-footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 45px;
  border-top: 1px solid #f2f2f2;
}
.CollectiveCard-metric {
  float: left;
  width: 50%;
  margin: 9px 0px;
}
.CollectiveCard-metric-value {
  font-size: 16px;
  font-weight: normal;
  text-align: center;
  color: #303233;
}
.CollectiveCard-metric-label {
  font-size: 9px;
  text-align: center;
  margin: 1px;
  color: #a8afb3;
  text-transform: uppercase;
}
</style>

{{#if relatedGroups.length}}
<h2>Related collectives</h2>

<div class="CollectiveCards">
  {{#each relatedGroups}}
  <div class="CollectiveCard">
    <a href="{{config.host.website}}/{{slug}}">
      <div>
        <div class='CollectiveCard-head'>
          <div class='CollectiveCard-background' style="background-image: url('{{backgroundImage}}')"></div>
          <div class='CollectiveCard-image' style="background-image: url('{{logo}}')"></div>
        </div>
        <div class='CollectiveCard-body'>
          <div class='CollectiveCard-name'>{{name}}</div>
          <div class='CollectiveCard-description'>We are on a mission to {{mission}}</div>
        </div>
        <div class='CollectiveCard-footer'>
          <div class='clearfix mt2'>
            <div class='CollectiveCard-metric'>
              <div class='CollectiveCard-metric-value'>{{contributorsCount}}</div>
              <div class='CollectiveCard-metric-label'>contributors</div>
            </div>
            <div class='CollectiveCard-metric'>
              <div class='CollectiveCard-metric-value'>{{currency yearlyIncome currency=currency}}</div>
              <div class='CollectiveCard-metric-label'>annual budget</div>
            </div>
          </div>
        </div>
      </div>
    </a>
  </div>
  {{/each}}
</div>

{{/if}}