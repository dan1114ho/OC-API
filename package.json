{
  "name": "opencollective-api",
  "version": "0.0.56",
  "description": "OpenCollective API",
  "author": "@philmod @arnaudbenard @xdamman",
  "main": "index.js",
  "engines": {
    "node": "5.1.0",
    "npm": "3.3.12"
  },
  "dependencies": {
    "async": "^0.9.0",
    "axios": "^0.7.0",
    "base64url": "^1.0.5",
    "bcrypt": "^0.8.1",
    "bluebird": "^3.0.1",
    "body-parser": "^1.12.2",
    "child-process-promise": "^1.1.0",
    "clearbit": "^1.2.1",
    "config": "^1.16.0",
    "cors": "^2.5.3",
    "dotenv": "^1.2.0",
    "errorhandler": "^1.4.0",
    "express": "^4.12.2",
    "express-server-status": "*",
    "flat": "^2.0.0",
    "form-data": "^0.2.0",
    "handlebars": "^4.0.5",
    "joi": "^7.3.0",
    "jsonwebtoken": "^5.7.0",
    "knox": "^0.9.2",
    "lodash": "^3.6.0",
    "moment": "^2.10.3",
    "moment-timezone": "^0.5.0",
    "morgan": "^1.6.0",
    "multer": "^0.1.8",
    "newrelic": "^1.18.5",
    "node-slack": "0.0.7",
    "node-uuid": "^1.4.3",
    "nodemailer": "^1.11.0",
    "paypal-adaptive": "^0.4.2",
    "paypal-rest-sdk": "^1.6.8",
    "pg": "^4.3.0",
    "pg-hstore": "^2.3.1",
    "querystring": "^0.2.0",
    "sequelize": "2.0.4",
    "sequelize-cli": "^1.7.0",
    "slug": "^0.9.1",
    "stripe": "^3.3.4"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "chai": "*",
    "chance": "^0.8.0",
    "cheerio": "^0.19.0",
    "eslint": "^1.9.0",
    "eslint-config-opencollective": "^1.1.0",
    "eslint-plugin-react": "^4.2.3",
    "istanbul": "^1.0.0-alpha.2",
    "jsxhint": "^0.15.1",
    "mocha": "^2.4.5",
    "mocha-circleci-reporter": "0.0.1",
    "nock": "^2.2.0",
    "sequelize-cli": "^1.4.0",
    "sinon": "1.10.3",
    "supertest": ""
  },
  "scripts": {
    "test": "NODE_ENV=test npm run hint && NODE_ENV=test istanbul cover _mocha -- -R spec test",
    "circleci": "NODE_ENV=circleci npm run hint && mocha --reporter mocha-circleci-reporter --reporter-options mochaFile=$CIRCLE_TEST_REPORTS/junit/junit.xml test",
    "start": "npm run hint && node .",
    "dev": "nodemon -e js,hbs -w app",
    "hint": "eslint '**/*.js' --quiet",
    "db:migrate": "sequelize db:migrate --config config/sequelize_cli.json --models-path app/models/ --env  $SEQUELIZE_ENV",
    "db:migrate:undo": "sequelize db:migrate:undo --config config/sequelize_cli.json --models-path app/models/ --env  $SEQUELIZE_ENV",
    "db:migrate:dev": "sequelize db:migrate --models-path app/models/ --env development --url postgres://localhost:5432/${PG_DATABASE:='opencollective_localhost'}",
    "db:seed": "sequelize db:seed --config config/sequelize_cli.json --env  $SEQUELIZE_ENV",
    "db:copy:prod": "./scripts/db_copy_to_localhost.sh prod && npm run db:sanitize",
    "db:copy:staging": "./scripts/db_copy_to_localhost.sh staging",
    "db:copy:prod:staging": "./scripts/db_copy_prod_to_staging.sh && heroku run npm run db:sanitize --app opencollective-staging-api",
    "db:sanitize": "node scripts/replace_stripe_accounts",
    "db:reset": "NODE_ENV=development node scripts/reset",
    "migration:create": "sequelize migration:create --config config/sequelize_cli.json",
    "postinstall": "sh ./scripts/postinstall.sh",
    "git:clean": "git branch --merged | grep -v \\* | grep -v master | grep -v dev | xargs -n 1 git branch -d",
    "testserver": "NODE_ENV=test_server npm start",
    "deploy:staging": "bash -x scripts/deploy.sh staging",
    "deploy:production": "bash -x scripts/deploy.sh production",
    "report:tx": "node scripts/report_transactions",
    "check:transactions": "node scripts/check_transactions_on_stripe",
    "script": "node scripts/execute"
  },
  "license": "Copyright (c) 2016 OpenCollective, Inc."
}
